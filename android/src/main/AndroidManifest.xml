<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.why.template.compose">

    <application
        android:name="com.github.whyrising.composetemplate.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/application_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Template.Main">
        <activity
            android:name="com.github.whyrising.composetemplate.app.SplashActivity"
            android:theme="@style/Theme.Template.Fullscreen.Splash" />

        <activity android:name="com.github.whyrising.composetemplate.app.HostActivity" />

        <activity-alias
            android:name="LauncherActivity"
            android:exported="true"
            android:targetActivity="com.github.whyrising.composetemplate.app.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="HomeActivity"
            android:exported="true"
            android:targetActivity="com.github.whyrising.composetemplate.app.HostActivity" />
    </application>
</manifest>
